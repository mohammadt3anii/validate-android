<resources>

    <!-- #################### -->
    <!-- Set font type in XML -->
    <!-- #################### -->
    
    <attr name="fontFace" format="string" />

    <!-- BetterTextView -->
    <declare-styleable name="BetterTextView">
        <attr name="fakeFocused" format="boolean" />
        <attr name="fontFace" />
    </declare-styleable>
    
    <!-- BetterEditText -->
    <declare-styleable name="BetterEditText">
        <attr name="fontFace" />
    </declare-styleable>
    
    <!-- BetterButton -->
    <declare-styleable name="BetterButton">
        <attr name="fontFace" />
    </declare-styleable>

    <!-- BetterAutoComplete -->
    <declare-styleable name="BetterAutoComplete">
        <attr name="fontFace" />
    </declare-styleable>

</resources>